
=link_to "", {:controller => "map", :action => "index", :reason => "show"}

%table#parkingspots
	%thead
	%tbody
		- lot = @parkinglot
		- count = 0
		- @parkingspots.each_slice(lot.width) do |row|
			%tr
				- row.each do |spot|
					- count = count + 1
					- if count % (2*lot.width) == 0
						%td{:class=>spot.status, :id=>spot}= link_to "", showspot_path(postr: spot.id), postr: spot.id
						%tr
						- for i in 0...lot.width
							%td
					- else
						%td{:class=>spot.status, :id=>spot}= link_to "", showspot_path(postr: spot.id), postr: spot.id


%div{:id=>"spot", :class=>@overlay}
	%div{:class=>"popup"}
		=link_to raw('&times'), {:controller => "map", :action => "index", :postr => ''}, :class=>"close"
		//raw allows html codes
		%p=@spotID 
		%p=@name 
		%p=@status
		%p=@type


