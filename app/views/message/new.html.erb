<h2>Compose new message</h2>

<% if flash[:success] %>
  <div class="notice-success"><%= flash[:success] %></div>
<% end %>
<% if flash[:failure] %>
  <div class="notice-failure"><%= flash[:failure] %></div>
<% end %>

<%= form_tag(message_compose_path, method: "post") do %>

  <div class="field">
    <%= label_tag "To: (enter email)" %><br />
    <%= text_field 'recipient', nil, value: session[:recipient] %>
  </div>

  <div class="field">
    <%= label_tag "Subject" %><br />
    <%= text_field 'subject', nil, value: session[:subject]  %>
  </div>

  <div class="field">
    <%= label_tag "Body" %><br>
    <%= text_area 'body', nil, rows:10, cols:25, value: session[:body] %>
  </div>

  <div class="actions">
    <%= submit_tag "Send", id: 'submit' %>
  </div>
<% end %>
