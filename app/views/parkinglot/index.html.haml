:javascript
	function spot(id, stat, type, occ){
		console.log("SPOTting");
		console.log("Width: " + "#{@parkinglot.width}");
		document.getElementById("spotID").textContent=id;
		document.getElementById("status").textContent=stat;
		document.getElementById("spotType").textContent=type;
		document.getElementById("occupying").textContent=occ;
		event.preventDefault();
	}

%table#parkingspots
	%thead
	%tbody
		- lot = @parkinglot
		- count = 0
		- @parkingspots.each_slice(lot.width) do |row|
			- #{td = %td.open}
			%tr
				- row.each do |spot|
					- count = count + 1
					- if count % (2*lot.width) == 0
						-if spot.status=="open"
							%td.open= link_to spot.status, "", :onclick=>"spot(\"#{spot.id}\", \"#{spot.status}\", \"#{spot.spot_type}\", \"#{spot.occupying}\")"
						-elsif spot.status=="reserved"
							%td.reserved= link_to spot.status, "", :onclick=>"spot(\"#{spot.id}\", \"#{spot.status}\", \"#{spot.spot_type}\", \"#{spot.occupying}\")"
						-elsif spot.status=="taken"
							%td.taken= link_to spot.status, "", :onclick=>"spot(\"#{spot.id}\", \"#{spot.status}\", \"#{spot.spot_type}\", \"#{spot.occupying}\")"
						-else
							%td= link_to spot.status, "", :onclick=>"spot(\"#{spot.id}\", \"#{spot.status}\", \"#{spot.spot_type}\", \"#{spot.occupying}\")"
						%tr
						- for i in 0...lot.width
							%td
					- else
						-if spot.status=="open"
							%td.open= link_to spot.status, "", :onclick=>"spot(\"#{spot.id}\", \"#{spot.status}\", \"#{spot.spot_type}\", \"#{spot.occupying}\")"
						-elsif spot.status=="reserved"
							%td.reserved= link_to spot.status, "", :onclick=>"spot(\"#{spot.id}\", \"#{spot.status}\", \"#{spot.spot_type}\", \"#{spot.occupying}\")"
						-elsif spot.status=="taken"
							%td.taken= link_to spot.status, "", :onclick=>"spot(\"#{spot.id}\", \"#{spot.status}\", \"#{spot.spot_type}\", \"#{spot.occupying}\")"
						-else
							%td= link_to spot.status, "", :onclick=>"spot(\"#{spot.id}\", \"#{spot.status}\", \"#{spot.spot_type}\", \"#{spot.occupying}\")"
					

%div#div1
	%p#spotID
	%p#status
	%p#spotType
	%p#occupying			

= link_to 'Back', root_path

